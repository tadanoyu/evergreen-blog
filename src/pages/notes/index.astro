---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

// const posts = (await getCollection('notes')).sort(
// 	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
// );
const posts = (await getCollection('notes')).sort((a, b) => {
    const titleA = a.data.title.toUpperCase();
    const titleB = b.data.title.toUpperCase();
    if (titleA < titleB) {
        return -1; 
    }
    if (titleA > titleB) {
        return 1;
    }
    return 0;
});

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			li {
				list-style: none;
			}
		</style>
	</head>
	<body>
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/notes/${post.slug}/`}>{post.data.title}</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<!-- <Footer /> -->
	</body>
</html>
