---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const posts = (await getCollection('note')).sort((a, b) => {
	const category_compare = (id_1: string, id_2: string) => {
        const len = Math.min(id_1.length, id_2.length);

        // Compare each character's ASCII value
        for (let i = 0; i < len; i++) {
            const diff = id_1.charCodeAt(i) - id_2.charCodeAt(i);
            if (diff !== 0) return diff; // Return the first difference
        }

        // If one is a prefix of the other, shorter one should come first
        return id_1.length - id_2.length;
    };

    return category_compare(a.data.category, b.data.category);
});

---

<!doctype html>
<html lang="en">
	<head>
		<title>note | jiiyoo.me</title>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style lang="scss">
			.header {
				margin-bottom: 3rem;
				
				& > span,
				.menu {
					font-size: var(--sm);
				}
			}
			
			.posts {
				a {
					text-decoration: none;
					display: block;
					
					&:hover {
						background-color: inherit;
					}
					
					& span {
						padding: 0.2rem;
						transition: all 0.2s ease-in-out;
					}
				}
				
				& > ul {
					padding: 0;
				}
				
				li {
					list-style: none;
					transition: opacity 0.2s ease;
					margin-bottom: 0.5rem;

					&:hover{
						a span {
							background-color: rgb(var(--gray-light));
							border-radius: 3px;
						}
					}
				}

				.head {
					margin-bottom: 0.5rem;
				}
			}

			.navi {
				display: flex;
				align-items: center;
				
				a {
					color: inherit;
					font-size: var(--sm);
				}

				.by {
					font-size: var(--xs);
				}
			}

			.separator {
				margin: 0 0.5rem;
			}

			.category {
				display: block;
				font-size: var(--xs);
				// text-transform: lowercase;
				color: #aaa;
				margin-left: 0.25rem;
				transition: all 0.2s ease;
			}
		</style>
	</head>
	<body>
		<main>
			<section>
				<div class="header">
					<h1>{t('home.menu2')['title']}</h1>
					<span>{t('home.menu2')['exp']}</span>
					<div class="navi">
						<div class="author">
							<span class="by">by</span>
							<a href="/">{t('home.name')}</a>
						</div>
						<span class="separator"> â€¦ </span>
						<div class="navi_item">
							<a href="/writing">{t('home.menu1')['title']}</a>
						</div>
					</div>
				</div>
				<div class="posts">
					<ul>
						{
							posts.map((post) => (
								<li>
									<a href={`/note/${post.slug}/`}>
										<div class="head">
											<div class="category">{post.data.category ? post.data.category : "note"}</div>
											<span>{post.data.title}</span>
										</div>
									</a>
								</li>
							))
						}
					</ul>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
