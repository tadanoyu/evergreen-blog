							<a href="/writing">{t('home.menu2')['title']}</a>
						</div>
					</div>
				</div>
				<div class="posts">
					<ul>
						{
							posts
							.filter((post) => post.data.lang === "en")
							.map((post) => {
								const langs = post_lang_mapping[post.data.uid] || {};
								return (
								<div class="post">
									<li>
										<a href={`/note/${post.id}/`}>
											<div class="head">
												{ langs.ko && langs.ja && <span class="subtext">{`{${post.data.folge}} ${post.data.uid} - ðŸ‡°ðŸ‡· ðŸ‡¯ðŸ‡µ`}</span> }
