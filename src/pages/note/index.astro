												{ !langs.ko && langs.ja && <span class="subtext">{`{${post.data.folge}} ${post.data.uid} - ðŸ‡¯ðŸ‡µ`}</span> }
												{ !langs.ko && !langs.ja && <span class="subtext">{`{${post.data.folge}} ${post.data.uid}`}</span> }
												<span class="head__title">{`${post.data.title}`}</span>
