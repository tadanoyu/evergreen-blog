---
import BaseHead from '@components/BaseHead.astro';
import Footer from '@components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { useTranslations } from '../i18n/utils';

const t = useTranslations();
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style lang="scss">
			.header {
				display: flex;
				align-items: center;
				justify-content: space-between;
				margin-bottom: 3rem;
			}
			.handle {
				font-style: italic;
				font-weight: 300;
				font-size: 0.875rem;
			}
			.content {
				color: var(--text);
				font-size: 0.95rem;

				& > p,
				& > blockquote {
					margin: 0.5rem 0;
				}
			}

			.hand {
				display: inline-block;
				rotate: 0deg;
				animation: handMotion 1s infinite;
				transform-origin: left;
			}

			@keyframes handMotion {
				0% {
					rotate: 0deg;
				}
				50% {
					rotate: -20deg;
				}
			}

			.menu {
				margin-top: 3rem;

				& > ul {
					list-style: none;
					padding-left: 0;
				}
			}

			.explanation {
				font-size: 0.825em;
				margin-left: 1em;
			}
		</style>
	</head>
	<body>
		<main>
			<div class="header">
				<h1>{t('home.name')} <span class="handle"> / @{t('home.username')}</span></h1>
			</div>
			<div class="content">
				<p>{t('home.text')}<span class="hand">„Å£</span></p>
				<div class="menu">
					<ul role="navigation">
						<li>
							<a href="/note">{t('home.menu1')['title']}</a>
							<span class="explanation">{t('home.menu1')['exp']}</span>
						</li>
						<li>
							<a href="/writing">{t('home.menu2')['title']}</a>
							<span class="explanation">{t('home.menu2')['exp']}</span>
						</li>
						<li>
							<a href="/writing/12/">{t('home.menu3')['title']}</a>
							<span class="explanation">{t('home.menu3')['exp']}</span>
						</li>
					</ul>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
